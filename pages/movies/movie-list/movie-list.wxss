@import "../movie/movie-template.wxss";

.movie-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.movie-inner-container{
  margin: 0 auto 20rpx;
}
.movie-head {
  padding: 30rpx 20rpx 22rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;/*分散对齐*/
}

.slogan {
  font-size: 14px;
}

.more {
  font-size: 12px;
}

.more-txt {
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
}

.more-img {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.movies-container {
  display: flex;
  flex-direction: row;
}
