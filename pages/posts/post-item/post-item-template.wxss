@import "../../movies/stars/stars.wxss";
.main{
 display: flex;
 flex-direction: column;
 margin-top: 20rpx;
 margin-bottom: 40rpx;
 background-color: #fff;
 border-bottom: 1px solid #ededed;
 border-top: 1px solid #ededed;
 padding: 20rpx 0;
}
.main .list-head{
  height: 100rpx;
  line-height: 100rpx;
}
.main .list-head .news-author{
  margin-left: 10px;
  border-radius: 50%;
  height: 60rpx;
  width: 60rpx;
  vertical-align:middle;
}
.main .news-date{
 margin-left: 20rpx;
 vertical-align: middle;
 margin-bottom: 5px;
 font-size: 26rpx;
}
.main .news-title{
 font-size: 34rpx;
 font-weight: 600;
 color:#333;
 margin: 10px 0 10px 10px;
}
.main .news-img{
  width: 100%;
  height: 340rpx;
}
.main .news-detail{
  padding: 10px 5px;
  color:#666;
  font-size: 24rpx;
}
.weekRat{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size:14px;
  margin-top: 5px;
}