/* pages/demo/demo.wxss */

.parent {
  display: flex;
  flex-direction: row;
}

.parent view {
  height: 50rpx;
}

.left {
  background-color: red;
  flex: 0 1 400rpx;
}

.right {
  background-color: yellow;
  flex: 1 0 200rpx;
}

.sc-container {
  display: flex;
  flex-direction: column;
}

.sc-container text {
  font-size: 16px;
  margin: 10rpx 0 0 20rpx;
}

.sc-container text.mingju {
  font-size: 20px;
  font-weight: bold;
}

.head-title {
  font-size: 32px;
  text-align: center;
  margin-bottom: 20px;
}

.refreash {
  position: fixed;
  right: 10px;
  bottom: 10px;
  border-radius: 50%;
  background-color: #ff4351;
  border-color: #ff4351;
  width: 140rpx;
  height: 140rpx;
  line-height: 140rpx;
  padding: 10rpx;
  color: #fff;
  text-align: center;
  z-index:9;
  font-family: "Helvetica Neue Light",
                 "Helvetica Neue",
                 Helvetica,
                 Arial,
                 "Lucida Grande",
                 sans-serif;
}
.open-txt{
  padding: 10px;
  background-color: #efeff4;
  color:#666;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  align-items:center;
}
.open-txt text{
  font-size: 14px;
  line-height: 35rpx;
  margin-top:10px;
}